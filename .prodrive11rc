#generating index
find -L ~/PTK_ROOT/ | grep -v '/test/' | grep -v '/PTK_ROOT/pkg/' | egrep '\.q$' > ~/index 2>/dev/null
cat ~/index | xargs egrep '^[a-zA-Z0-9_.]+:(\s)*\{' |awk {'split($1,a,":"); print a[2]"\t"a[1]"\t/^"a[2]":/;\"\tf"'} | sort > ~/tags 2>/dev/null

#rlwrap completion and search based on tags
alias rlwrap='rlwrap -f $HOME/tags -r -c -m'
alias rq='rlwrap q'
